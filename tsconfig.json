{
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es5",
    "lib": [
      "dom.iterable",
      "dom",
      "esnext"
    ],
    "outDir": "./.next/",
    "plugins": [
      { 
        "name": "next"
      }
    ],
    "paths": {
      "#components": ["./components"],
      "#svg": ["./components/svg"],
      "#types": ["./types"],
      "#styles": ["./styles"],
    }
  },
  "include": [
    ".eslintrc.js",
    "./next.config.js",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "next",
    "node_modules"
  ]
}